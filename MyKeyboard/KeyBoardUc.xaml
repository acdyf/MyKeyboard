<UserControl x:Class="MyKeyboard.KeyBoardUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyKeyboard"
             xmlns:res="clr-namespace:MyKeyboard.Resources"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <!--字母页-->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding CharacterBoardVisibility}">
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding Q}" Width="100" Height="100" Command="{Binding KeyPressExecuteCommand}" CommandParameter="Q"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding W}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="W"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding E}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="E"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding R}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="R"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding T}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="T"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding Y}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="Y"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding U}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="U"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding I}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="I"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding O}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="O"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding P}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="P"/>
                <Grid Width="10"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Visibility="{Binding CharacterBoardVisibility}">
                <Grid Width="60"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding A}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="A"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding S}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="S"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding D}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="D"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding F}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="F"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding G}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="G"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding H}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="H"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding J}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="J"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding K}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="K"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding L}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="L"/>
                <Grid Width="10"/>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal" Visibility="{Binding CharacterBoardVisibility}">
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" res:KeyButtonElement.Geometry="{DynamicResource UpArrowGeometry}" Width="100" Height="100" res:KeyButtonElement.IsAlwaysLight="{Binding AlwaysLight}" Command="{Binding CapsPressExecuteCommand}" CommandParameter="CapsLock"/>
                <Grid Width="58"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding Z}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="Z"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding X}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="X"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding C}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="C"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding V}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="V"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding B}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="B"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding N}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="N"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding M}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="M"/>
                <Grid Width="68"/>
                <Button Style="{DynamicResource KeyButtonStyle}" res:KeyButtonElement.Geometry="{DynamicResource BackSpaceGeometry}" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="Back"/>
                <Grid Width="10"/>
            </StackPanel>
            <Grid Grid.Row="7">
                <Button Style="{DynamicResource KeyButtonStyle}" Content="Space" HorizontalAlignment="Stretch" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="Space" Margin="220,0,220,0"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="{Binding ChangeBoardName}" HorizontalAlignment="Left" Width="200" Height="100"  Command="{Binding ChangeBoardPressExecuteCommand}" CommandParameter="{Binding ChangeBoardName}" Margin="10,0,0,0"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="Enter" HorizontalAlignment="Right" Width="200" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="Return" Margin="0,0,10,0"/>
            </Grid>
            <!--数字与标点符号页-->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding NumBoardVisibility}">
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="1" Width="100" Height="100" Command="{Binding KeyPressExecuteCommand}" CommandParameter="1"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="2" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="2"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="3" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="3"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="4" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="4"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="5" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="5"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="6" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="6"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="7" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="7"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="8" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="8"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="9" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="9"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="0" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="0"/>
                <Grid Width="10"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Visibility="{Binding NumBoardVisibility}">
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="-" Width="100" Height="100" Command="{Binding KeyPressExecuteCommand}" CommandParameter="1"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="/" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="2"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content=":" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="3"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content=";" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="4"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="(" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="5"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content=")" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="6"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="$" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="7"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="&#38;" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="8"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="@" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="9"/>
                <Grid Width="10"/>
                <Button Style="{DynamicResource KeyButtonStyle}" Content="&#34;" Width="100" Height="100"  Command="{Binding KeyPressExecuteCommand}" CommandParameter="0"/>
                <Grid Width="10"/>
            </StackPanel>
            <!--其他符号页-->
        </Grid>
    </Viewbox>
</UserControl>
